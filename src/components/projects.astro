---
import { Image } from "astro:assets";
import pokegyat from "../../public/projects/pokegyat.png";
import grow from "../../public/projects/grow.png";
import codatv from "../../public/projects/codatv.png";
import battleship from "../../public/projects/battleship.png";
import chess from "../../public/projects/chess.jpg";
import tinjob from "../../public/projects/tinjob.png";
import loopia from "../../public/projects/loopia.webp";
import dailyYou from "../../public/projects/dailyyou.png";
import muller from "../../public/projects/muller.png";

interface Project {
  title: string;
  describe: string;
  image: typeof chess;
  link: string;
  preview: string;
  status: string;
}

const projects: Project[] = [
  {
    title: "Jeu d'Échecs",
    describe: "#",
    image: chess as ImageMetadata,
    link: "https://github.com/Jorys-Pephily-coda/Chess",
    preview: "#",
    status: "En cours",
  },
  {
    title: "Tinjob",
    describe: "Site de recherche d'emplois",
    image: tinjob as ImageMetadata,
    link: "https://gitlab.com/Jorys_Pephily_Coda/tinjob",
    preview: "#",
    status: "En Attente d'amélioration",
  },
  {
    title: "Muller Automotive",
    describe: "Site de gestion des employés dans le cadre d'un projet de type entreprise",
    image: muller as ImageMetadata,
    link: "https://github.com/Darlit0/Reconnaissance-faciale_Muller_Automotive",
    preview: "#",
    status: "En Attente d'amélioration",
  },
  {
    title: "PokéGYAT",
    describe: "Jeu de combat Pokémon",
    image: pokegyat as ImageMetadata,
    link: "https://gitlab.com/poke-group/pokegyat",
    preview: "#",
    status: "En Attente d'amélioration",
  },
  {
    title: "Loopia",
    describe: "Réseau social minimaliste",
    image: loopia as ImageMetadata,
    link: "https://gitlab.com/Jorys_Pephily_Coda/loopia",
    preview: "#",
    status: "En amélioration",
  },
  {
    title: "Daily You",
    describe: "Site de suivi des habitudes",
    image: dailyYou as ImageMetadata,
    link: "https://gitlab.com/Jorys_Pephily_Coda/to-do-list-by-jorys-pephily",
    preview: "#",
    status: "En Attente d'amélioration",
  },
  {
    title: "Jeu de Bataille Navale",
    describe: "#",
    image: battleship as ImageMetadata,
    link: "https://github.com/Jorys-Pephily-coda/battaille-navale",
    preview: "#",
    status: "En Attente d'amélioration",
  },
  {
    title: "GROW!",
    describe: "Catcher game créé en 2 jour pour une game jam",
    image: grow as ImageMetadata,
    link: "https://github.com/Rafus455/grow",
    preview: "https://rayankw.itch.io/grow",
    status: "Terminé",
  },
  {
    title: "Coda TV",
    describe: "Recréation de l'ancien site de france TV ",
    image: codatv as ImageMetadata,
    link: "https://github.com/Jorys-Pephily-coda/codatv",
    preview: "https://jorys-pephily-coda.github.io/codatv/",
    status: "En Attente d'amélioration",
  },
];
---

<section
  id="projects"
  class="py-12 border-t border-[#ffffff10] text-[var(--white)]"
>
  <div class="max-w-5xl mx-auto">
    <h2 class="text-lg text-[var(--sec)] mb-2 shiny-sec">Ce que j'ai déja fait</h2>
    <h3 class="text-4xl md:text-5xl font-medium mb-8">Projets</h3>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      {
        projects.map((project) => (
          <div class="group">
            <a
              href={project.preview && project.preview !== "#" ? project.preview : project.link}
              target="_blank"
              rel="noopener noreferrer"
              class="block"
            >
              <div class="rounded-2xl overflow-hidden shadow-lg hover:shadow-xl transition-shadow duration-300 mb-4">
                <Image
                  src={project.image}
                  alt={project.title}
                  class="w-full h-48 md:h-72 object-cover group-hover:scale-105 transition-transform duration-300"
                />
              </div>
              <div class="flex items-center px-3">
                <div class="flex-grow">
                  <h4 class="text-2xl font-semibold">{project.title}</h4>
                  {project.describe && project.describe !== "#" && (
                    <span class="py-1 text-sm ">
                      {project.describe}
                    </span>
                  )}
                  <br>
                  <span class="py-1 text-sm text-[var(--white-icon)]">
                    {project.status}
                  </span>
                </div>
                <div class="flex gap-2 ml-auto">
                  <a
                    target="_blank"
                    href={project.link}
                    aria-label="GitHub"
                    class="size-14 flex justify-center items-center text-[var(--white-icon)] hover:text-white transition duration-300 ease-in-out border border-1 border-[var(--white-icon-tr)] p-3 rounded-xl bg-[#1414149c] hover:bg-[var(--white-icon-tr)]"
                  >
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      viewBox="0 0 24 24"
                      fill="currentColor"
                      class="size-7"
                    >
                      <path d="M24 12L18.3431 17.6569L16.9289 16.2426L21.1716 12L16.9289 7.75736L18.3431 6.34315L24 12ZM2.82843 12L7.07107 16.2426L5.65685 17.6569L0 12L5.65685 6.34315L7.07107 7.75736L2.82843 12ZM9.78845 21H7.66009L14.2116 3H16.3399L9.78845 21Z" />
                    </svg>
                  </a>
                  {project.preview && project.preview !== "#" && (
                    <a
                      target="_blank"
                      href={project.preview}
                      aria-label="Preview"
                      class="size-14 flex justify-center items-center text-[var(--white-icon)] hover:text-white transition duration-300 ease-in-out border border-1 border-[var(--white-icon-tr)] p-3 rounded-xl bg-[#1414149c] hover:bg-[var(--white-icon-tr)]"
                    >
                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        viewBox="0 0 24 24"
                        fill="currentColor"
                        class="size-7"
                      >
                        <path d="M16.0037 9.41421L7.39712 18.0208L5.98291 16.6066L14.5895 8H7.00373V6H18.0037V17H16.0037V9.41421Z" />
                      </svg>
                    </a>
                  )}
                </div>
              </div>
            </a>
            
          </div>
        ))
      }
    </div>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      <a
        target="_blank"
        href="https://github.com/Jorys-Pephily-coda"
        aria-label="GitHub"
        class="w-full flex items-center justify-center gap-2 mt-9 text-[var(--white-icon)] hover:text-white transition duration-300 ease-in-out border border-[var(--white-icon-tr)] p-3 rounded-full bg-[#1414149c] hover:bg-[var(--white-icon-tr)] hover:scale-105"
      >
        <span class="md:text-lg text-md">Plus de projets sur </span>
        <svg
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 24 24"
          fill="currentColor"
          class="size-6"
        >
          <path
            d="M12.001 2C6.47598 2 2.00098 6.475 2.00098 12C2.00098 16.425 4.86348 20.1625 8.83848 21.4875C9.33848 21.575 9.52598 21.275 9.52598 21.0125C9.52598 20.775 9.51348 19.9875 9.51348 19.15C7.00098 19.6125 6.35098 18.5375 6.15098 17.975C6.03848 17.6875 5.55098 16.8 5.12598 16.5625C4.77598 16.375 4.27598 15.9125 5.11348 15.9C5.90098 15.8875 6.46348 16.625 6.65098 16.925C7.55098 18.4375 8.98848 18.0125 9.56348 17.75C9.65098 17.1 9.91348 16.6625 10.201 16.4125C7.97598 16.1625 5.65098 15.3 5.65098 11.475C5.65098 10.3875 6.03848 9.4875 6.67598 8.7875C6.57598 8.5375 6.22598 7.5125 6.77598 6.1375C6.77598 6.1375 7.61348 5.875 9.52598 7.1625C10.326 6.9375 11.176 6.825 12.026 6.825C12.876 6.825 13.726 6.9375 14.526 7.1625C16.4385 5.8625 17.276 6.1375 17.276 6.1375C17.826 7.5125 17.476 8.5375 17.376 8.7875C18.0135 9.4875 18.401 10.375 18.401 11.475C18.401 15.3125 16.0635 16.1625 13.8385 16.4125C14.201 16.725 14.5135 17.325 14.5135 18.2625C14.5135 19.6 14.501 20.675 14.501 21.0125C14.501 21.275 14.6885 21.5875 15.1885 21.4875C19.259 20.1133 21.9999 16.2963 22.001 12C22.001 6.475 17.526 2 12.001 2Z"
          ></path>
        </svg>
      </a>
      <a
        target="_blank"
        href="https://gitlab.com/Jorys_Pephily_Coda"
        aria-label="GitHub"
        class="w-full flex items-center justify-center gap-2 mt-9 text-[var(--white-icon)] hover:text-white transition duration-300 ease-in-out border border-[var(--white-icon-tr)] p-3 rounded-full bg-[#1414149c] hover:bg-[var(--white-icon-tr)] hover:scale-105"
      >
        <span class="md:text-lg text-md">Plus de projets sur </span>
        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 512 512" class="size-6">
          <path fill="currentColor" d="m488.028 207.68l-.674-1.731l-65.335-171.154a17.07 17.07 0 0 0-6.723-8.129a17.445 17.445 0 0 0-19.995 1.08a17.57 17.57 0 0 0-5.799 8.83l-44.114 135.478H166.756L122.641 36.576a17.2 17.2 0 0 0-5.798-8.856a17.44 17.44 0 0 0-19.996-1.079a17.22 17.22 0 0 0-6.723 8.129l-65.46 171.078l-.649 1.731a122.2 122.2 0 0 0-3.308 77.122c7.259 25.388 22.543 47.718 43.548 63.625l.225.175l.6.427l99.526 74.814l49.238 37.407l29.993 22.73A20.1 20.1 0 0 0 256.034 488c4.405 0 8.689-1.447 12.197-4.121l29.993-22.73l49.238-37.407l100.126-75.266l.25-.2c20.958-15.91 36.207-38.217 43.454-63.57a122.26 122.26 0 0 0-3.264-77.026"/>
        </svg>
      </a>
    </div>
  </div>
</section>